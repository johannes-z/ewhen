                            <li class="form-group"><label for="strength">Strength:</label> <input id="strength" style="display:inline-flex" 6type="text" name="data.attributes.strength.rank" value="{{data.attributes.strength.rank}}"/></li>
                            <li>Agility: number goes here</li>
                            <li>Mind: number goes here</li>
                            <li>Appeal: number goes here</li>
                        </ol-->
            </div>
        

        <div class="ewhen flex-item" id="careers">
            <h3>{{localize "EW.game_term.careers"}}</h3>
            <table style="border:none; height:auto; width:100%; margin:auto; padding:3px;">
                {{#each actor.items as |item id|}}
                {{#ife item.data.type "career"}}
                <tr>
                    <td class="item-name">{{item.name}}</td>
                    <td class="ewhen statfield"><input class="ewhen statbox" id="appeal" type="text" name="item.data.rank" value="{{item.data.rank}}" /></td>
                    <td><i class="fa fa-edit"></i><i class="fa fa-trash"></i></td>
                </tr>
                {{/ife}}
                {{/each}}
            </table>
        </div>

        <div class="ewhen flex-item">
            <h3>{{localize "EW.game_term.resource_pools"}}</h3>
                    <p>Hero Points</p>
                    <p>Arcane Points</p>
                    <p>Psionic Points</p>
        </div>
        </div>

        <hr>

        <div class="ewhen flex-container">
               
