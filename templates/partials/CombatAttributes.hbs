<div class="ewhen flex-item">
                 <h3 class="traitsheet-header">{{localize "EW.game_term.attributes.combat"}}</h3>
                <table class="item-table">    
                
                    <tr>
                        <td ><a class="att-roll" data-attribute="melee">{{localize "EW.attribute.combat.melee"}}</a></td>
                        <td class="ewhen statfield cell"><input class="attr-name" type="text" data-dtype="Number" size="2" maxlength="2" width="2" name="data.combat_attributes.melee.rank" value="{{data.combat_attributes.melee.rank}}"/</td>
                        {{#if (setting "useScale")}}<td class="align-center">({{data.combat_attributes.melee.scale}})</td>{{/if}}
                    </tr>
                    <tr>
                        <td ><a class="att-roll" data-attribute="ranged">{{localize "EW.attribute.combat.ranged"}}</a></td>
