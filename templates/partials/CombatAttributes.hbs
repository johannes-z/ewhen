                        {{#if (setting "useScale")}}<td class="align-center">({{data.combat_attributes.ranged.scale}})</td>{{/if}}
                    </tr>
                    <tr>
                        <td ><a class="att-roll" data-attribute="defense">{{localize "EW.attribute.combat.defense"}}</a></td>
                        <td class="ewhen statfield cell"><input class="attr-name" type="text" data-dtype="Number" size="2" maxlength="2" width="2" name="data.combat_attributes.defense.rank" value="{{data.combat_attributes.defense.rank}}"/</td>
                        {{#if (setting "useScale")}}<td class="align-center">({{data.combat_attributes.defense.scale}})</td>{{/if}}
