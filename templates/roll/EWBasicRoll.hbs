<form class="ewhen roll-dialog">
 <header class="roll-header">
        <h1 class="ewhen roll-name">{{localize "EW.rolltype.basicroll"}}</h1>
    </header>

{{!-- primary - primary attributes object primary.(attribute), blah blah .rank --}}
{{!-- combat - combat attributes object - combat.(attribute), blah blah .rank --}}
{{!-- careers - careers object - career, (career).rank --}}
 <div class="ewhen roll-dialog">
     <div class="form-group">
         <label for="att">Main Attribute</label>
         <select id="pattr" style="width:100%;" name="primary" data-main-att="primary">

            {{#select primary}}
                {{#each primary as |a name|}}
                    <option value="{{name}}">{{localize (proper name)}}</option>
                {{/each}}
            {{/select}}
         </select>
     </div>
     <div class="form-group">
         <label for="att">Combat Attribute</label>
         <select id="cattr" style="width:100%;" name="primary" data-main-att="combat">
             <option value="none" selected></option>
            {{#select combat}}
                {{#each combat as |a name|}}
                    <option value="{{name}}">{{localize (proper name)}}</option>
                {{/each}}
            {{/select}}
         </select>
     </div>
       
        <div class="form-group">
         <label for="career">Career</label>
         <select id="career" style="width:100%;" name="career">
             <option value="none" selected></option>
            {{#select careers}}
                {{#each careers as |c|}}
                    <option class="career-option" value="{{c.name}}" data-item-id="{{c._id}}">{{c.name}}</option>
                {{/each}}
            {{/select}}
         </select>
     </div>
     <div class="form-group">
         <label for="bonus">Bonuses</label>
         <input id="bonus" type="text" value="0" data-dtype="Number"/>
     </div>
     <div class="form-group">
         <label for="penalty">Penalties</label>
         <input id="penalty" type="text" value="0" data-dtype="Number"/>
     </div>
     <div class="form-group">
         <label for="bdice">Bonus Dice</label>
         <select id="bdice" style="width:100%" name="bdice">
             <option value="0" selected>None</option>
             <option value="1">1</option>
             <option value="2">2</option>
             <option value="3">3</option>
         </select>
     </div>
 </div>


</form>